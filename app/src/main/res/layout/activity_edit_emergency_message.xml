<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#185CA3"
        android:foregroundTint="#185CA3">


        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="398dp"
            android:layout_height="89dp"
            android:layout_marginTop="6dp"
            android:background="#FEFEFE"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

            <TextView
                android:id="@+id/text_view_contact_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#DF0000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_contact_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Select Contact(s)"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_contact_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_contact_list_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Select Contact(s)"
                android:textColor="@color/lightGray"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout6"
            android:layout_width="398dp"
            android:layout_height="95dp"
            android:layout_marginTop="6dp"
            android:background="#FEFEFE"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <TextView
                android:id="@+id/text_vre_switch_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Activate Voice Recognition"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_vre_switch"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_vre_switch_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Turns on and off voice recognition
                service for this emergency message"
                android:textColor="@color/lightGray"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switch5"
                android:layout_width="64dp"
                android:layout_height="73dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/textViewActive"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/switch5"
                android:layout_marginEnd="-71dp"
                android:layout_marginBottom="44dp"
                android:layout_toStartOf="@+id/switch5"
                android:text=""
                android:textColor="#B50909" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="398dp"
            android:layout_height="95dp"
            android:layout_marginTop="6dp"
            android:background="#FEFEFE"
            android:padding="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.114">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_em"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Title"
                android:textColor="@color/lightGray"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="398dp"
            android:layout_height="95dp"
            android:layout_marginTop="6dp"
            android:background="#FFFFFF"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout6">

            <TextView
                android:id="@+id/text_view_keyphrase_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#DF0000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_keyphrase_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Select Keyphrase(s)"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_keyphrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_keyphrase_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:text="Select or Create a Key Phrase"
                android:textColor="@color/lightGray"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout5GPS"
            android:layout_width="398dp"
            android:layout_height="95dp"
            android:layout_marginTop="6dp"
            android:background="#FEFEFE"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayoutCall">

            <TextView
                android:id="@+id/text_gps_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Activate GPS Location"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_gps"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_gps_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Send your location with your message and every two minutes after"
                android:textColor="@color/lightGray"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchGPS"
                android:layout_width="64dp"
                android:layout_height="73dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="0dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="398dp"
            android:layout_height="95dp"
            android:layout_marginTop="6dp"
            android:background="#FEFEFE"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

            <TextView
                android:id="@+id/text_custom_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Configure Text Message"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_custom_text"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_custom_text_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Select or Create a Custom Text Message"
                android:textColor="@color/lightGray"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchSendText"
                android:layout_width="64dp"
                android:layout_height="73dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="0dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutCall"
            android:layout_width="398dp"
            android:layout_height="100dp"
            android:layout_marginTop="6dp"
            android:background="#FEFEFE"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

            <TextView
                android:id="@+id/text_call_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Activate Speakerphone Calling"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_call_description"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_call_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Automatically dial selected contacts and be placed in speakerphone"
                android:textColor="@color/lightGray"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchCall"
                android:layout_width="61dp"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="0dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutAudioWarningMessage"
            android:layout_width="398dp"
            android:layout_height="95dp"
            android:layout_marginTop="6dp"
            android:background="#FEFEFE"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout5GPS">

            <TextView
                android:id="@+id/text_audio_warning_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Audio Distress Warning"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_audio_warning_description"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_audio_warning_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Activate to play a distress audio message on your phone when this EM is activated"
                android:textColor="@color/lightGray"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchAudioWarningMessage"
                android:layout_width="64dp"
                android:layout_height="73dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="0dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewEditEmergencyMessage"
            android:layout_width="390dp"
            android:layout_height="53dp"
            android:layout_marginBottom="22dp"
            android:text="Edit Emergency Message"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>