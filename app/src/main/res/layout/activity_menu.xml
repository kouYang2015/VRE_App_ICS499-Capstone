<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF185CA5"
    tools:context=".view.MenuActivity">

    <TextView
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/blinker_bold"
        android:text="@string/app_logo_name"
        android:textColor="@color/white"
        android:textSize="110sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1F2B6C"

        android:text="@string/logout"

        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/app_logo"
        app:layout_constraintBottom_toBottomOf="@id/app_logo"
        app:layout_constraintLeft_toRightOf="@id/app_logo"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/speechRecognition"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#1F2B6C"
        android:text="@string/speechRecognition"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/app_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/customTextMessageContent"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#1F2B6C"
        android:text="@string/customTextMessageContent"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/speechRecognition"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/emergencyMessageSetup"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#1F2B6C"

        android:text="@string/emergencyMessageSetup"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/customTextMessageContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/profile"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#1F2B6C"

        android:text="@string/profile"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/emergencyMessageSetup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/vreServiceActivation"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintLeft_toLeftOf="@id/profile"
        app:layout_constraintRight_toRightOf="@id/profile"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintVertical_bias="0.104" />


</androidx.constraintlayout.widget.ConstraintLayout>